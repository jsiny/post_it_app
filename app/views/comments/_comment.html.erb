<% show_post ||= false %>

<div class="row">
  <div class="col-2">
    <div class="card text-center bg-light">
      <div class="card-body">
        <%= link_to '', method: :post do %>
          <svg class="bi bi-arrow-up text-dark" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M8 3.5a.5.5 0 01.5.5v9a.5.5 0 01-1 0V4a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
            <path fill-rule="evenodd" d="M7.646 2.646a.5.5 0 01.708 0l3 3a.5.5 0 01-.708.708L8 3.707 5.354 6.354a.5.5 0 11-.708-.708l3-3z" clip-rule="evenodd"/>
          </svg>
        <% end %>
        <br/>
        Votes
        <br/>
        <%= link_to '', method: :post do %>
          <svg class="bi bi-arrow-down text-dark" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M4.646 9.646a.5.5 0 01.708 0L8 12.293l2.646-2.647a.5.5 0 01.708.708l-3 3a.5.5 0 01-.708 0l-3-3a.5.5 0 010-.708z" clip-rule="evenodd"/>
            <path fill-rule="evenodd" d="M8 2.5a.5.5 0 01.5.5v9a.5.5 0 01-1 0V3a.5.5 0 01.5-.5z" clip-rule="evenodd"/>
          </svg>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-10">
    <div class="card">
      <div class="card-body">
        <p>
          <em>"<%= comment.body %>"</em>
          <% if show_post %>
            on <%= link_to comment.post.title, post_path(comment.post) %>
          <% end %>
        </p>
        <p>
          <span class="text-muted">by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
          <span class="text-muted">at <%= display_datetime(comment.created_at) %></span>
        </p>
      </div>
    </div>
  </div>
</div>